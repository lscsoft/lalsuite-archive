if len(xedges) < 15:
    pylab.xticks(xedges, map(str, xedges))

pylab.axis([min(xedges), max(xedges), 0, max(yedges)])
pylab.xlabel(r"$m_2 (M_\odot)$")
pylab.ylabel(r"$D (\mathrm{Mpc})$")
if opts.figure_type not in ("ps", "eps"):
  pylab.legend(loc="upper right")
pylab.savefig("pcsignal-slice.%s" % opts.figure_type)

