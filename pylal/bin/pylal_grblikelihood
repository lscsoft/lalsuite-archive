# hold(True)
# IC = contourf(xedges, yedges, pcsignalsq)
# xlabel(r"$m_2 (M_\odot)$")
# ylabel(r"$D (\mathrm{Mpc})$")
# colorbar(IC)

pylab.figure()
if opts.figure_type in ("ps", "eps"):
  pylab.axes([0.125,0.2,0.95-0.125,0.95-0.22])
palette = pylab.cm
IM = pylab.imshow(pcsignalsq, origin='lower', extent=im_extent,
  interpolation='nearest')
pylab.hold(True)
pylab.contour(pcsignalsq, extent=im_extent)
pylab.colorbar(IM)
pylab.axis('tight')
#pylab.axvline(candmass)
pylab.title(r'$p[\mathrm{candidate}|h(m_2,D)]$')
pylab.xlabel(r"$m_2 (M_\odot)$")
pylab.ylabel(r"$D (\mathrm{Mpc})$")
pylab.savefig("pcsignal.%s" % opts.figure_type)

if not opts.show_plot:
  pylab.close()


pylab.figure()
if opts.figure_type in ("ps", "eps"):
  pylab.axes([0.125,0.2,0.95-0.125,0.95-0.22])
palette = pylab.cm
IM = pylab.imshow(foundsq + missedsq, origin='lower', extent=im_extent,
  interpolation='nearest')
pylab.hold(True)
pylab.contour(foundsq + missedsq, extent=im_extent)
pylab.colorbar(IM)
pylab.axis('tight')
#pylab.axvline(candmass)
pylab.title('Number of injections made')
pylab.xlabel(r"$m_2 (M_\odot)$")
pylab.ylabel(r"$D (\mathrm{Mpc})$")
pylab.savefig("made-injections.%s"  % opts.figure_type)

if not opts.show_plot:
  pylab.close()


pylab.figure()
if opts.figure_type in ("ps", "eps"):
  pylab.axes([0.125,0.2,0.95-0.125,0.95-0.22])
pylab.palette = pylab.cm
IM = pylab.imshow(foundsq / (foundsq + missedsq + 1.0e-10), origin='lower',
  extent=im_extent, interpolation='nearest')
pylab.hold(True)
pylab.contour(foundsq / (foundsq + missedsq + 1.0e-10), extent=im_extent)
pylab.colorbar(IM)
pylab.axis('tight')
#pylab.axvline(candmass)
pylab.title('Fraction of injections found')
pylab.xlabel(r"$m_2 (M_\odot)$")
pylab.ylabel(r"$D (\mathrm{Mpc})$")
pylab.savefig("found-fraction.%s" % opts.figure_type)

if not opts.show_plot:
  pylab.close()


pylab.figure()
if opts.figure_type in ("ps", "eps"):
  pylab.axes([0.125,0.2,0.95-0.125,0.95-0.22])
tmpx,tmpy,yarray = get_contour(xedges,new_yedges,pcsignalsq,0.75)
p1=pylab.fill(tmpx,tmpy, facecolor=(0.75, 0.75, 0.75), label='25\% exclusion')
tmpx,tmpy,yarray = get_contour(xedges,new_yedges,pcsignalsq,0.50)
p2=pylab.fill(tmpx,tmpy, facecolor=(0.5, 0.5, 0.5), label='50\% exclusion')
tmpx,tmpy,yarray = get_contour(xedges,new_yedges,pcsignalsq,0.25)
p3=pylab.fill(tmpx,tmpy, facecolor=(0.25, 0.25, 0.25), label='75\% exclusion')
tmpx,tmpy,yarray = get_contour(xedges,new_yedges,pcsignalsq,0.1)
p4=pylab.fill(tmpx,tmpy, facecolor=(0.1, 0.1, 0.1), label='90\% exclusion')

if opts.known_distance is not None:
  pylab.axhline(y=opts.known_distance, color=(0.75, 0.75, 0.75), linewidth=2,
    label='_nolegend_')

