for i in range(0,numDays):
  date[i] = str(GetCommandOutput('''tconvert '''+str(GPSday[i])+''' -f %Y%m%d''')[0])
  dayOfWeek[i] = str(GetCommandOutput('''tconvert '''+str(GPSday[i])+''' -f %a''')[0])
