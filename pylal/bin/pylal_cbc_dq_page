      UPVstartDate[int(i/7)] = UPVstartDate[int(i/7)].replace('\n','')
      UPVstart[int(i/7)+1] = GPSday[i]
      UPVstartDate[int(i/7)+1] = str(GetCommandOutput('''tconvert '''+str(UPVstart[int(i/7)+1])+''' -f %Y%m%d''')[0])
